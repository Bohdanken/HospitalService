<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="ukma.edu.ua.HospitalApp.logger">
    <Appenders>
        <MapAppender name="MapAppender">
            <RequestHandlerLayout/>
            <MarkerFilter marker="REQUEST_STATUS" onMatch="ACCEPT" onMismatch="DENY"/>
        </MapAppender>
        <File name="FileRequestLogs" fileName="logs/requests.log">
            <RequestHandlerLayout/>
            <MarkerFilter marker="REQUEST_STATUS" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="FileRequestLogs"/>
            <AppenderRef ref="MapAppender"/>
        </Root>
    </Loggers>
</Configuration>
